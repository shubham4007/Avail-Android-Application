<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BagFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header"
        android:id="@+id/wishlishtheader"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_below="@+id/wishlishtheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ad8eda"
        app:cardCornerRadius="20sp"
        android:layout_margin="10sp">
        <RelativeLayout
            android:background="#ad8eda"
            android:layout_below="@+id/wishlishtheader"
            android:layout_margin="5sp"
            android:id="@+id/fav1"
            android:focusableInTouchMode="false"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/defaultMargin"
                android:background="@color/stroke"
                android:scaleType="center"
                android:src="@drawable/sb1" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:layout_toRightOf="@+id/img"
                android:text="T-shirt"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@+id/title"
                android:layout_marginTop="@dimen/defaultMargin"
                android:text="Rs. 2000"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/remove"
                android:focusable="true"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/defaultMargin"
                android:src="@drawable/ic_close_grey600_24dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ad8eda"
        app:cardCornerRadius="20sp"
        android:layout_margin="10sp">

        <RelativeLayout

            android:layout_below="@+id/fav1"
            android:layout_margin="5sp"
            android:id="@+id/fav2"
            android:focusableInTouchMode="false"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/defaultMargin"
                android:background="@color/stroke"
                android:scaleType="center"
                android:src="@drawable/sb6" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:layout_toRightOf="@+id/img2"
                android:text="Trousers"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title2"
                android:layout_alignLeft="@+id/title2"
                android:layout_marginTop="@dimen/defaultMargin"
                android:text="Rs. 700"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/remove2"
                android:focusable="true"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/defaultMargin"
                android:src="@drawable/ic_close_grey600_24dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    <Button
        android:id="@+id/apply"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/rounded_corner_blue"
        android:text="Buy" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:text="Bag"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="5sp"/>




</RelativeLayout>